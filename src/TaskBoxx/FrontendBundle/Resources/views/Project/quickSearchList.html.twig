<select onchange="if (this.value != '') { window.location = this.value; }">
    <option selected="selected">{% trans %}Jump to a project{% endtrans %}</option>
    <option disabled="disabled">---</option>
    {% for project in projects %}
        <option value="{{ path('taskboxx_project_board', {'project': project.slug}) }}">{{ project.name()}}</option>
    {% endfor %}
</select>